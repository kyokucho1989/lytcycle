<% set_meta_tags title: 'シミュレーション一覧' %>
<% set_meta_tags description: 'シミュレーションの一覧ページです' %>

<div class="mx-auto max-w-7xl py-5 px-4 sm:px-6 lg:px-8">
  <h1 class="text-3xl font-bold tracking-tight text-gray-900">シミュレーション一覧</h1>
  <% if @simulations.length != 0 %>
  <div class="mx-auto max-w-7xl pt-4 px-4 sm:px-6 lg:px-8 text-right">
    <%= link_to "新規作成", new_user_simulation_path(current_user), class: "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
  </div>
  <% end %>
  <div id="simurates" class="mx-auto py-8 max-w-4xl">
    <ul role="list" class="divide-y divide-gray-100">
      <% if @simulations.length == 0 %>
      シミュレーションデータがありません。データの新規作成を行ってください。
      <div class="mx-auto max-w-7xl pt-4 px-4 sm:px-6 lg:px-8 text-right">
        <%= link_to "新規作成", new_user_simulation_path(current_user), class: "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
      </div>

      <% else %>
      <% @simulations.each do |simulation| %>
        <li class="relative flex justify-between gap-x-6 py-5">
          <div class="min-w-0 flex-auto">
            <p class="font-semibold text-gray-900">タイトル：<%= simulation.title %></p>
            <p class="mt-1 truncate text-xs/5 text-gray-500">ボトルネック工程:<%= simulation.bottleneck_process %></p>
            <p class="mt-1 truncate text-xs/5 text-gray-500">サイクルタイム:<%= simulation.cycle_time %></p>
          </div>
          <div class="flex shrink-0 items-center gap-x-4">
            <%= link_to user_simulation_path(current_user, simulation) ,class: "rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" do %>
              詳細
            <% end %>
            <%= link_to edit_user_simulation_path(current_user, simulation) ,class: "rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" do %>
              編集
            <% end %>
            <%= link_to user_simulation_path(current_user, simulation), data: { turbo_method: :delete } ,class: "rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" do %>
              削除
            <% end %>
          </div>
        </li>
      <% end %>
      <% end %>
    </ul>
  </div>
</div>

