<nav class="mt-8 flex flex-col gap-2">
<%- if controller_name != 'sessions' %>
<div>
  <%= link_to "すでに登録済の場合はこちらからログイン", new_session_path(resource_name) ,class:"text-indigo-600 hover:text-indigo-500 underline"%>
</div>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
<div>
  <%= link_to "会員登録がまだの場合はこちら", new_registration_path(resource_name) ,class:"text-indigo-600 hover:text-indigo-500 underline"%>
</div>
<% end %>

<div>
  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "パスワードを忘れた場合はこちら", new_password_path(resource_name), class: "text-indigo-600 hover:text-indigo-500 underline" %>
</div>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
<div>
  <%= link_to "確認メールが届いてない場合はこちら", new_confirmation_path(resource_name), class: "text-indigo-600 hover:text-indigo-500 underline" %>
</div>
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
<div>
  <%= link_to "ロック解除の手順が届きませんか？", new_unlock_path(resource_name) %>
</div>
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= button_to " #{OmniAuth::Utils.camelize(provider)} でログインする", omniauth_authorize_path(resource_name, provider), data: { turbo: false } %>
  <% end %>
<% end %>
</nav>
