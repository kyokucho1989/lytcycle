<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
  <h2 class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">会員登録</h2>
  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

        <div class="mb-8">
          <%= f.label :メールアドレス ,class: "block text-sm font-medium leading-6 text-gray-900" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "block w-full mt-2 rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"%>
        </div>

      <div class="mb-4">
        <%= f.label :パスワード ,class: "block text-sm font-medium leading-6 text-gray-900"%>
        <% if @minimum_password_length %>
        <p>(<%= @minimum_password_length %> 文字以上にしてください)</p>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password" , class: "block w-full mt-2 rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"%>
      </div>

      <div class="mb-5">
        <%= f.label :確認用パスワード ,class: "block text-sm font-medium leading-6 text-gray-900"%>
        <%= f.password_field :password_confirmation ,autocomplete: "new-password" ,class: "block w-full mt-2 rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
      </div>

      <div class="actions">
        <%= f.submit "会員登録する" ,class: "flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600"%>
      </div>
    <% end %>

<%= render "devise/shared/links" %>
</div>
</div>
